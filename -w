    <div class="container">
        <!-- Search Section -->
        <div class="search-section">
            <div class="search-box">
                <input type="text" class="search-input" id="searchInput" 
                       placeholder="Ask a legal question... (e.g., 'What are my rights if my landlord is evicting me?')">
                <button class="search-btn" id="askLibrarian" onclick="askLibrarian()">
                    ü§ñ Ask Librarian
                </button>
            </div>
            <div class="category-filters" id="categoryFilters">
                <!-- Populated by JS -->
            </div>
        </div>
        
        <div class="main-content">
            <!-- Sidebar -->
            <div class="sidebar">
