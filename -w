                </div>
                <div class="nav-item" onclick="showQuickRef('defenses')">
                    <span class="icon">üó°Ô∏è</span>
                    <span>Eviction Defenses</span>
                </div>
            </div>
            
            <!-- Results Area -->
            <div class="results-area" id="resultsArea">
                <!-- AI Librarian Response (hidden by default) -->
                <div class="librarian-card" id="librarianCard" style="display: none;">
                    <div class="librarian-header">
                        <div class="librarian-avatar">ü§ñ</div>
                        <div class="librarian-info">
                            <h3>AI Legal Librarian</h3>
                            <p>Your question answered with Minnesota law</p>
                        </div>
                    </div>
                    <div class="librarian-response" id="librarianResponse">
                        <!-- Populated by JS -->
                    </div>
