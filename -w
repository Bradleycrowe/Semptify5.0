    <script>
        const API_BASE = '/api/law-library';
        let currentSection = 'statutes';
        let allStatutes = [];
        let allCourtRules = [];
        let allCaseLaw = [];
        let currentFilter = 'all';
        
        // Initialize
        document.addEventListener('DOMContentLoaded', async () => {
            await loadCategories();
            await loadAllData();
            showSection('statutes');
            
            // Enter key triggers search
            document.getElementById('searchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') askLibrarian();
            });
        });
        
        async function loadCategories() {
            try {
                const resp = await fetch(`${API_BASE}/categories`);
                const data = await resp.json();
                
                const filtersHtml = data.statute_categories.map(cat => `
                    <div class="category-chip" onclick="filterByCategory('${cat.id}')">
                        <span>${cat.icon}</span>
                        <span>${cat.name}</span>
                    </div>
                `).join('');
                
                document.getElementById('categoryFilters').innerHTML = filtersHtml;
            } catch (err) {
                console.error('Failed to load categories:', err);
            }
        }
        
        async function loadAllData() {
            try {
                const [statutes, courtRules, caseLaw] = await Promise.all([
                    fetch(`${API_BASE}/statutes`).then(r => r.json()),
                    fetch(`${API_BASE}/court-rules`).then(r => r.json()),
                    fetch(`${API_BASE}/case-law`).then(r => r.json())
                ]);
                
                allStatutes = statutes;
                allCourtRules = courtRules;
                allCaseLaw = caseLaw;
                
                document.getElementById('statuteCount').textContent = statutes.length;
                document.getElementById('courtRuleCount').textContent = courtRules.length;
                document.getElementById('caseLawCount').textContent = caseLaw.length;
            } catch (err) {
                console.error('Failed to load data:', err);
            }
        }
        
        function showSection(section) {
            currentSection = section;
            
            // Update nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.toggle('active', item.dataset.section === section);
            });
            
            // Update tabs visibility
            const tabs = document.getElementById('tabs');
            tabs.style.display = section === 'statutes' ? 'flex' : 'none';
            
            renderResults();
        }
        
        function filterResults(category) {
            currentFilter = category;
            
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.toggle('active', tab.dataset.tab === category);
            });
            
            renderResults();
        }
        
        function filterByCategory(categoryId) {
            currentSection = 'statutes';
            currentFilter = categoryId;
            
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.toggle('active', item.dataset.section === 'statutes');
            });
            
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.getElementById('tabs').style.display = 'flex';
            renderResults();
        }
        
        function renderResults() {
            const grid = document.getElementById('resultsGrid');
            let items = [];
            
            switch (currentSection) {
                case 'statutes':
                    items = currentFilter === 'all' 
                        ? allStatutes 
                        : allStatutes.filter(s => s.category === currentFilter);
                    grid.innerHTML = items.map(renderStatuteCard).join('');
                    break;
                    
                case 'court-rules':
                    items = allCourtRules;
                    grid.innerHTML = items.map(renderCourtRuleCard).join('');
                    break;
                    
                case 'case-law':
                    items = allCaseLaw;
                    grid.innerHTML = items.map(renderCaseLawCard).join('');
                    break;
            }
            
            if (items.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">üì≠</div>
                        <h3>No Results Found</h3>
                        <p>Try a different category or search term</p>
                    </div>
                `;
            }
        }
        
        function renderStatuteCard(statute) {
            const keyPoints = statute.key_points?.slice(0, 3) || [];
            const relatedForms = statute.related_forms?.slice(0, 2) || [];
            
            return `
                <div class="law-card">
                    <div class="law-card-header">
                        <div>
                            <div class="law-card-title">${statute.title}</div>
                            <div class="law-card-citation">${statute.citation}</div>
                        </div>
                        <span class="law-card-badge">${formatCategory(statute.category)}</span>
                    </div>
                    <div class="law-card-summary">${statute.summary}</div>
                    <div class="key-points">
                        ${keyPoints.map(p => `<span class="key-point">‚úì ${truncate(p, 40)}</span>`).join('')}
                    </div>
                    <div class="law-card-footer">
                        <div class="related-forms">
                            ${relatedForms.map(f => `<span class="form-link">üìù ${formatFormName(f)}</span>`).join('')}
                        </div>
                        <button class="view-full-btn" onclick="viewStatute('${statute.id}')">View Full Text</button>
                    </div>
                </div>
            `;
        }
        
        function renderCourtRuleCard(rule) {
            const tips = rule.practical_tips?.slice(0, 3) || [];
            
            return `
                <div class="law-card">
                    <div class="law-card-header">
                        <div>
                            <div class="law-card-title">${rule.title}</div>
                            <div class="law-card-citation">Rule ${rule.rule_number}</div>
                        </div>
                        <span class="law-card-badge">${formatCategory(rule.category)}</span>
                    </div>
                    <div class="law-card-summary">${rule.summary}</div>
                    <div class="key-points">
                        ${tips.map(t => `<span class="key-point">üí° ${truncate(t, 40)}</span>`).join('')}
                    </div>
                    <div class="law-card-footer">
                        <div></div>
                        <button class="view-full-btn" onclick="viewCourtRule('${rule.id}')">View Full Text</button>
                    </div>
                </div>
            `;
        }
        
        function renderCaseLawCard(caseItem) {
            return `
                <div class="law-card">
                    <div class="law-card-header">
                        <div>
                            <div class="law-card-title">${caseItem.case_name}</div>
                            <div class="law-card-citation">${caseItem.citation}</div>
                        </div>
                        <span class="law-card-badge">${caseItem.court}</span>
                    </div>
                    <div class="law-card-summary">${caseItem.summary}</div>
                    <div class="key-points">
                        <span class="key-point">üìÖ Decided: ${caseItem.date_decided}</span>
                    </div>
                    <div class="law-card-footer">
                        <div style="color: var(--text-secondary); font-size: 0.85rem;">
                            ${caseItem.relevance}
                        </div>
                        <button class="view-full-btn" onclick="viewCaseLaw('${caseItem.id}')">View Details</button>
                    </div>
                </div>
            `;
        }
        
        async function askLibrarian() {
            const question = document.getElementById('searchInput').value.trim();
            if (!question) return;
            
            const btn = document.getElementById('askLibrarian');
            btn.disabled = true;
            btn.innerHTML = '‚è≥ Searching...';
            
            const card = document.getElementById('librarianCard');
            card.style.display = 'block';
            document.getElementById('librarianResponse').innerHTML = '<div class="loading"><div class="spinner"></div></div>';
            document.getElementById('sourcesList').innerHTML = '';
            document.getElementById('suggestedActions').innerHTML = '';
            
            try {
                const resp = await fetch(`${API_BASE}/librarian/ask`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ question })
                });
                
                const data = await resp.json();
                
                // Format answer with markdown-like processing
                const formattedAnswer = formatAnswer(data.answer);
                document.getElementById('librarianResponse').innerHTML = formattedAnswer;
                
                // Sources
                const sourcesHtml = data.sources.map(s => 
                    `<span class="source-tag" onclick="viewSource('${s.type}', '${s.id}')">${s.title}</span>`
                ).join('');
                document.getElementById('sourcesList').innerHTML = sourcesHtml;
                
                // Suggested Actions
                const actionsHtml = data.suggested_actions.map(a => 
                    `<button class="action-btn">‚úì ${a}</button>`
                ).join('');
                document.getElementById('suggestedActions').innerHTML = actionsHtml;
                
                // Related topics
                if (data.related_topics?.length) {
                    document.getElementById('suggestedActions').innerHTML += `
                        <div style="grid-column: 1 / -1; margin-top: 1rem; color: var(--text-secondary);">
                            <strong>Related Topics:</strong> ${data.related_topics.join(' ‚Ä¢ ')}
                        </div>
                    `;
                }
                
            } catch (err) {
                document.getElementById('librarianResponse').innerHTML = `
                    <p style="color: var(--danger);">‚ö†Ô∏è Error: ${err.message}</p>
                    <p>Please try again or browse the library manually.</p>
                `;
            }
            
            btn.disabled = false;
            btn.innerHTML = 'ü§ñ Ask Librarian';
        }
        
        function formatAnswer(text) {
            // Convert markdown-like formatting to HTML
            return text
                .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
                .replace(/\n\n/g, '</p><p>')
                .replace(/\n- /g, '</p><ul><li>')
                .replace(/\n(\d+)\. /g, '</p><ol><li>')
                .replace(/\n   - /g, '</li><li>')
                .replace(/<\/li><li>([^<]+)$/gm, '</li><li>$1</li></ul>')
                .split('\n').map(line => {
                    if (line.startsWith('- ')) return `<li>${line.substring(2)}</li>`;
                    return line;
                }).join('\n')
                .replace(/^/, '<p>')
                .replace(/$/, '</p>');
        }
        
        function viewStatute(id) {
            const statute = allStatutes.find(s => s.id === id);
            if (!statute) return;
            
            document.getElementById('modalTitle').textContent = statute.title;
            document.getElementById('modalCitation').textContent = statute.citation;
            document.getElementById('modalBody').innerHTML = `
                <h3>Summary</h3>
                <p>${statute.summary}</p>
                
                <h3>Key Points</h3>
                <ul>
                    ${statute.key_points.map(p => `<li>${p}</li>`).join('')}
                </ul>
                
                <h3>Full Text</h3>
                <p>${statute.full_text}</p>
                
                ${statute.related_forms?.length ? `
                    <h3>Related Forms</h3>
                    <div class="key-points">
                        ${statute.related_forms.map(f => `<span class="key-point">üìù ${formatFormName(f)}</span>`).join('')}
                    </div>
                ` : ''}
                
                ${statute.effective_date ? `<p style="color: var(--text-secondary); margin-top: 1rem;">Effective: ${statute.effective_date}</p>` : ''}
            `;
            
            document.getElementById('modalOverlay').classList.add('active');
        }
        
        function viewCourtRule(id) {
            const rule = allCourtRules.find(r => r.id === id);
            if (!rule) return;
            
            document.getElementById('modalTitle').textContent = rule.title;
            document.getElementById('modalCitation').textContent = `Rule ${rule.rule_number}`;
            document.getElementById('modalBody').innerHTML = `
                <h3>Summary</h3>
                <p>${rule.summary}</p>
                
                <h3>Full Text</h3>
                <p>${rule.full_text}</p>
                
                ${rule.practical_tips?.length ? `
                    <h3>Practical Tips</h3>
                    <ul>
                        ${rule.practical_tips.map(t => `<li>${t}</li>`).join('')}
                    </ul>
                ` : ''}
            `;
            
            document.getElementById('modalOverlay').classList.add('active');
        }
        
        function viewCaseLaw(id) {
            const caseItem = allCaseLaw.find(c => c.id === id);
            if (!caseItem) return;
            
            document.getElementById('modalTitle').textContent = caseItem.case_name;
            document.getElementById('modalCitation').textContent = caseItem.citation;
            document.getElementById('modalBody').innerHTML = `
                <p><strong>Court:</strong> ${caseItem.court}</p>
                <p><strong>Date Decided:</strong> ${caseItem.date_decided}</p>
                
                <h3>Summary</h3>
                <p>${caseItem.summary}</p>
                
                <h3>Holding</h3>
                <p>${caseItem.holding}</p>
                
                <h3>Relevance</h3>
                <p>${caseItem.relevance}</p>
                
                ${caseItem.key_quotes?.length ? `
                    <h3>Key Quotes</h3>
                    ${caseItem.key_quotes.map(q => `<blockquote style="border-left: 3px solid var(--primary); padding-left: 1rem; margin: 1rem 0; font-style: italic;">"${q}"</blockquote>`).join('')}
                ` : ''}
            `;
            
            document.getElementById('modalOverlay').classList.add('active');
        }
        
        function viewSource(type, id) {
            if (type === 'statute') {
                viewStatute(id);
            } else if (type === 'court_rule') {
                viewCourtRule(id);
            }
        }
        
